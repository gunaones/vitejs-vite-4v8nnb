.navbar
  background-image: radial-gradient(
    circle farthest-corner at 10% 20%,
    rgba(171, 102, 255, 1) 0%,
    rgba(116, 182, 247, 1) 90%
  );
  box-shadow: 1px 1px 5px #888;
  border-bottom: .5px solid rgb(233,233,233);

  .navbar-brand
    color: #fff;
  .navbar-brand:hover
    text-shadow: 1px 1px 10px blue;
    color: #fff;

.nav-item
  margin:1px;
  border-bottom: 1px solid transparent !important;
.nav-item:hover
  border-bottom: 1px solid purple !important;
